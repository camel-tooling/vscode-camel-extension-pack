{
	"compilerOptions": {
		"module": "NodeNext",
		"moduleResolution": "NodeNext",
		"target": "ES2022",
		"lib": [
            "ES2022"
        ],
		"outDir": "out",
		"resolveJsonModule": true,
		"strict": true,
		"forceConsistentCasingInFileNames": true,
		"sourceMap": true,
	},
	"include": [
		"src"
	],
	"exclude": [
		"node_modules",
		"test-resources"
	]
}